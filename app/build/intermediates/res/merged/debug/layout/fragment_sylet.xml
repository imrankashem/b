<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.imran.doctorscorner.Sylet">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Sylhet Division"
      android:padding="10dp"
      android:textSize="23sp"
      android:textColor="@color/cardview_dark_background"
      android:elevation="10dp"
      android:divider="@color/cardview_dark_background"
      android:background="#fff"
      android:dividerHeight="4dp"
      android:gravity="center"/>

  <ListView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/listsylet"
      android:clickable="true"
      android:touchscreenBlocksFocus="true"
      style="@style/Animation.AppCompat.DropDownUp"
      android:elevation="@dimen/cardview_compat_inset_shadow"
      android:divider="@color/cardview_dark_background"
      android:dividerHeight="4dp"
      android:listSelector="#ff7f50"
      >
  </ListView>

</LinearLayout>

