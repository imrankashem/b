<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imran.doctorscorner.Chittagong"
    android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Chittagong Division"
    android:padding="10dp"
    android:textColor="@color/cardview_dark_background"
    android:elevation="10dp"
    android:divider="@color/cardview_dark_background"
    android:background="#fff"
    android:dividerHeight="4dp"
    android:textSize="23sp"
    android:gravity="center"/>

 <ListView
     android:id="@+id/listemchittagong"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:clickable="true"
     android:touchscreenBlocksFocus="true"
     style="@style/Animation.AppCompat.DropDownUp"
     android:elevation="@dimen/cardview_compat_inset_shadow"
     android:divider="@color/cardview_dark_background"
     android:dividerHeight="4dp"
     android:listSelector="#ff7f50"


     >

 </ListView>
</LinearLayout>
